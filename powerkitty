package HX23H2PROG;
import robocode.*;


public class Powerkitty extends JuniorRobot
{
	boolean movingForward;
 public void run() {
     
        setColors(red,green,red,green,red);

        while (true) {
           movingForward = true;
            ahead(400);
			turnGunRight(90);
            turnRight(90);
			turnGunRight(90);
			ahead(400);
			turnGunRight(90);
            turnLeft(90);
			turnGunRight(90);
			
        }
    }
    public void onScannedRobot() {
      
        fire();
    }
    public void onHitByBullet() {
       
        turnRight(90);
    }
    public void onHitWall() {
     
        back(50);
        turnLeft(180);
		turnGunRight(180);
    }
}
