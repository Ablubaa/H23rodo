package HX23H2PROG;
import robocode.*;


public class Powerkitty extends JuniorRobot
{
 public void run() {
     
        setColors(red,green,red,green,red);

        while (true) {
           
            ahead(100);

            turnRight(90);

            back(100);
            
            turnLeft(90);
        }
    }
    public void onScannedRobot() {
      
        fire();
    }
    public void onHitByBullet() {
       
        turnRight(90);
    }
    public void onHitWall() {
     
        back(20);
        turnLeft(90);
    }
}
